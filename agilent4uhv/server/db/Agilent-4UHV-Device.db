# Record definition file for one Agilent 4UHV Ion Pump Controller device.
# This is based on the work of Pete Owens from the Science and Technology Facilities Council (STFC).

# Parameters are:
# PORT              - Name of the serial port configured in asynDriver.
# PREFIX            - Prefix name for all PVs associated with the device.
# SERIAL_ADDRESS    - Controller RS-485 serial address (from 0 to 31) + 128.
#
##########################################################################
#                              One time reading                          #
##########################################################################

# Model
record(stringin, "$(PREFIX):Model-Cte") {
    field(DESC, "Device model")
    field(DTYP, "stream")
    field(FLNK, "$(PREFIX):SerialNumber-Cte")
    field(INP,  "@Agilent-4UHV.proto getModel($(SERIAL_ADDRESS)) $(PORT)")
    field(PINI, "YES")
}
# Serial number
record(stringin, "$(PREFIX):SerialNumber-Cte") {
    field(DESC, "Device serial number")
    field(DTYP, "stream")
    field(INP,  "@Agilent-4UHV.proto getSerialNumber($(SERIAL_ADDRESS)) $(PORT)")
    field(PINI, "YES")
}
##########################################################################

# Fan Temperature
record(longin, "$(PREFIX):FanTemperature-Mon") {
    field(DESC, "Fan temperature")
    field(DTYP, "stream")
    field(EGU,  "Â°C")
    field(HOPR, "200")
    field(LOPR, "0")
    field(INP,  "@Agilent-4UHV.proto fanTemperatureMon($(SERIAL_ADDRESS)) $(PORT)")
}

# Protect On/Off
record(longin, "$(PREFIX):Protect-RB") {
    field(PRIO, "HIGH")
    field(DESC, "Protect")
    field(DTYP, "stream")
    field(INP,  "@Agilent-4UHV.proto getProtect($(SERIAL_ADDRESS)) $(PORT)")
    field(PINI, "YES")
    field(PHAS, "0")
}
record(longout, "$(PREFIX):Protect-SP"){
    field(PRIO, "HIGH")
    field(DESC, "Protect On(1)/Off(0)")
    field(DESC, "Protect")
    field(DISV, "1")
    field(DRVH, "15")
    field(DRVL, "0")
    field(DTYP, "stream")
    field(FLNK, "$(PREFIX):Protect-RB")
    field(OUT,  "@Agilent-4UHV.proto setProtect($(SERIAL_ADDRESS)) $(PORT)")
    field(SDIS, "$(PREFIX):Protect_INIT.PACT")
}
record(seq, "$(PREFIX):Protect_INIT"){
    field(PINI, "YES")
    field(PHAS, "1")
    field(DLY1, "10")
    field(DOL1, "$(PREFIX):Protect-RB")
    field(LNK1, "$(PREFIX):Protect-SP PP")
}

# Step mode
record(longin, "$(PREFIX):Step-RB") {
    field(PRIO, "HIGH")
    field(DESC, "Step mode")
    field(DTYP, "stream")
    field(INP,  "@Agilent-4UHV.proto getStep($(SERIAL_ADDRESS)) $(PORT)")
    field(PHAS, "0")
    field(PINI, "YES")
}
record(longout, "$(PREFIX):Step-SP"){
    field(PRIO, "HIGH")
    field(DESC, "Voltage mode Step(1)/Fixed(0)")
    field(DISV, "1")
    field(DRVH, "15")
    field(DRVL, "0")
    field(DTYP, "stream")
    field(FLNK, "$(PREFIX):Step-RB")
    field(OUT,  "@Agilent-4UHV.proto setStep($(SERIAL_ADDRESS)) $(PORT)")
    field(SDIS, "$(PREFIX):Step_INIT.PACT")
}

record(seq, "$(PREFIX):Step_INIT"){
    field(PINI, "YES")
    field(PHAS, "1")
    field(DLY1, "10")
    field(DOL1, "$(PREFIX):Step-RB")
    field(LNK1, "$(PREFIX):Step-SP PP")
}

# Unit
record(mbbi, "$(PREFIX):Unit-RB") {
    field(PRIO, "HIGH")
    field(DESC, "Unit readback")
    field(DTYP, "stream")
    field(INP,  "@Agilent-4UHV.proto getUnit($(SERIAL_ADDRESS)) $(PORT)")
    field(PINI, "YES")
    field(PHAS, "0")
    field(ZRST, "Torr")
    field(ONST, "mBar")
    field(TWST, "Pa")
}
record(mbbo, "$(PREFIX):Unit-SP") {
    field(PRIO, "HIGH")
    field(DESC, "Unit setpoint")
    field(DISV, "1")
    field(DTYP, "stream")
    field(FLNK,"$(PREFIX):Unit-RB")
    field(OUT,  "@Agilent-4UHV.proto setUnit($(SERIAL_ADDRESS)) $(PORT)")
    field(SDIS, "$(PREFIX):Unit_INIT.PACT")
    field(ZRST, "Torr")
    field(ONST, "mBar")
    field(TWST, "Pa")
}
record(seq, "$(PREFIX):Unit_INIT"){
    field(PINI, "YES")
    field(PHAS, "1")
    field(DLY1, "10")
    field(DOL1, "$(PREFIX):Unit-RB")
    field(LNK1, "$(PREFIX):Unit-SP PP")
}

# Autostart
record(bi, "$(PREFIX):Autostart-RB") {
    field(PRIO, "HIGH")
    field(PINI, "YES")
    field(PHAS, "0")
    field(DESC, "Autostart mode")
    field(ZNAM, "Off")
    field(ONAM, "On")
    field(DTYP, "stream")
    field(INP,  "@Agilent-4UHV.proto getAutostart($(SERIAL_ADDRESS)) $(PORT)")
}
record(bo, "$(PREFIX):Autostart-SP") {
    field(PRIO, "HIGH")
    field(DTYP, "stream")
    field(OUT,  "@Agilent-4UHV.proto setAutostart($(SERIAL_ADDRESS)) $(PORT)")
    field(ZNAM, "Off")
    field(ONAM, "On")
    field(DISV, "1")
    field(SDIS, "$(PREFIX):Autostart_INIT.PACT")
    field(FLNK, "$(PREFIX):Autostart-RB")
}
record(seq, "$(PREFIX):Autostart_INIT"){
    field(PINI, "YES")
    field(PHAS, "1")
    field(DLY1, "10")
    field(DOL1, "$(PREFIX):Autostart-RB")
    field(LNK1, "$(PREFIX):Autostart-SP PP")
}

# --------------
record(fanout, "$(PREFIX):T"){
    field(LNK2, "$(PREFIX_CH1):T")
    field(LNK3, "$(PREFIX_CH2):T")
    field(LNK4, "$(PREFIX_CH3):T")
    field(LNK5, "$(PREFIX_CH4):T")
    field(PHAS, "$(PHAS)")
    field(SCAN, "$(TIME) second")
    field(SELM, "All")
}

record(fanout, "$(PREFIX):RB"){
    field(LNK1, "$(PREFIX):Protect-RB")
    field(LNK2, "$(PREFIX):Step-RB")
    field(LNK3, "$(PREFIX):Autostart-RB")
    field(LNK4, "$(PREFIX):Unit-RB")
    field(LNK5, "$(PREFIX):FanTemperature-Mon")
    field(PHAS, "2")
    field(SCAN, "60 second")
    field(SELM, "All")
}

record(fanout, "$(PREFIX):T2"){
    field(LNK1, "$(PREFIX_CH1):T2")
    field(LNK2, "$(PREFIX_CH2):T2")
    field(LNK3, "$(PREFIX_CH3):T2")
    field(LNK4, "$(PREFIX_CH4):T2")
    field(PHAS, "3")
    field(SCAN, "60 second")
    field(SELM, "All")
}

record(scalcout, "$(PREFIX):Unit_STR"){
    field(CALC, "(A=0?'Torr':(A=1?'mBar':'PASCAL'))")
    field(INPA, "$(PREFIX):Unit-RB.VAL CP")
}
record(stringout, "$(PREFIX_CH1):Pressure-Mon_EGU"){
    field(OMSL, "closed_loop")
    field(DOL,  "$(PREFIX):Unit_STR.SVAL CP")
    field(OUT,  "$(PREFIX_CH1):Pressure-Mon.EGU")
}
record(stringout, "$(PREFIX_CH2):Pressure-Mon_EGU"){
    field(OMSL, "closed_loop")
    field(DOL,  "$(PREFIX):Unit_STR.SVAL CP")
    field(OUT,  "$(PREFIX_CH2):Pressure-Mon.EGU")
}
record(stringout, "$(PREFIX_CH3):Pressure-Mon_EGU"){
    field(OMSL, "closed_loop")
    field(DOL,  "$(PREFIX):Unit_STR.SVAL CP")
    field(OUT,  "$(PREFIX_CH3):Pressure-Mon.EGU")
}
record(stringout, "$(PREFIX_CH4):Pressure-Mon_EGU"){
    field(OMSL, "closed_loop")
    field(DOL,  "$(PREFIX):Unit_STR.SVAL CP")
    field(OUT,  "$(PREFIX_CH4):Pressure-Mon.EGU")
}
