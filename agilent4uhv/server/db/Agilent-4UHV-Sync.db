#   SYNC SCAN LOOP
record(ai , "$(PREFIX-D1):Trigger"){ 
    field(PINI, "YES")
    field(MDEL,"-1")
}
record(ai, "$(PREFIX-D1):Out"){
	field(FLNK, "$(PREFIX-D2):Trigger")
    field(MDEL,"-1")
}
record(ai, "$(PREFIX-D2):Trigger"){
    field(MDEL,"-1")
}
record(ai, "$(PREFIX-D2):Out"){
	field(FLNK, "$(PREFIX-D3):Trigger")
    field(MDEL,"-1")
}
record(ai, "$(PREFIX-D3):Trigger"){
    field(MDEL,"-1")
}
record(ai, "$(PREFIX-D3):Out"){
    field(FLNK, "$(PREFIX-D4):Trigger")
	field(MDEL,"-1")
}
record(ai, "$(PREFIX-D4):Trigger"){
    field(MDEL,"-1")
}
record(ai, "$(PREFIX-D4):Out"){ 
    field(MDEL,"-1")
    field(FLNK, "$(PREFIX-D1):Trigger")
}
